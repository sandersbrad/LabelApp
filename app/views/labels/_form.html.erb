<%= form_for(@label) do |f| %>
  <% if @label.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@label.errors.count, "error") %> prohibited this label from being saved:</h2>

      <ul>
      <% @label.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='row'>
    <div class='col-md-6 address'>
      <div class='form-info'>
        <h3> From: </h3>
        <%= f.text_field :from_name, placeholder: 'Full Name' %></br>

        <%= f.text_field :from_street_1, placeholder: 'Street Address' %>

        <%= f.text_field :from_street_2, placeholder: 'Unit (opt)', size: '10'%></br>

        <%= f.text_field :from_city, placeholder: 'City' %>,

        <%= f.text_field :from_state, placeholder: 'State', size: '6' %>

        <%= f.text_field :from_country, size: '3' %>

        <%= f.text_field :from_zip, placeholder: 'Zip', size: '10' %></br>

        <%= f.text_field :from_email, placeholder: 'E-mail (opt)' %>

      </div>
    </div>

    <div class='col-md-6 address'>
      <div class='form-info'>
        <h3> To: </h3>
        <%= f.text_field :to_name, placeholder: 'Full Name' %></br>

        <%= f.text_field :to_street_1, placeholder: 'Street Address' %>

        <%= f.text_field :to_street_2, placeholder: 'Unit (opt)', size: '10'%></br>

        <%= f.text_field :to_city, placeholder: 'City' %>,

        <%= f.text_field :to_state, placeholder: 'State', size: '6' %>

        <%= f.text_field :to_country, size: '3' %>

        <%= f.text_field :to_zip, placeholder: 'Zip', size: '10' %></br>

        <%= f.text_field :to_email, placeholder: 'E-mail (optional)' %>
      </div>
    </div>
  </div>
  <div class='row address'>
    <div class='form-info parcel'>
      <h3> Parcel </h3>

      Length: <%= f.number_field :parcel_length, placeholder: 'in',
                                                 step: '0.1',
                                                 style: 'width: 40px' %>

      Width: <%= f.number_field :parcel_width, placeholder: 'in',
                                               step: '0.1',
                                               style: 'width: 40px' %>

      Height: <%= f.number_field :parcel_height, placeholder: 'in',
                                                 step: '0.1',
                                                 style: 'width: 40px' %>

      Weight: <%= f.number_field :parcel_weight, placeholder: 'lbs',
                                                step: '0.1',
                                                style: 'width: 40px' %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-default' %>
  </div>
<% end %>
